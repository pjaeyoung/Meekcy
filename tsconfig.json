{
	"compilerOptions": {
		"lib": ["ES5", "ES6"],
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.js"]
}
